# .coveragerc

[run]
# What to measure
branch = True
source = 
    core
    utils

[report]
# Format the report nicely
show_missing = True
skip_covered = True
exclude_lines =
    pragma: no cover
    if __name__ == .__main__.:
precision = 2

[html]
# Optional: Output HTML report
directory = coverage_html_report

[paths]
# Handle different local paths (for example if run on Windows and Linux)
source =
    core
    utils